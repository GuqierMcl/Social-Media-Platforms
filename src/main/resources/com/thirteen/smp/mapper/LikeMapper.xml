<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thirteen.smp.mapper.LikeMapper">
    <insert id="giveLike">
        insert into t_like
        values(#{param1},#{param2},#{param3})
    </insert>
    <delete id="deleteLike">
        delete from t_like
        where post_id=#{param1} and user_id=#{param2}
    </delete>

    <select id="getLikeUserIdByPostId" resultType="java.lang.Integer">
        select user_id
        from t_like where post_id=#{postid};
    </select>
    <select id="jugeLiked" resultType="java.lang.Integer">
        select count(*)
        from t_like where post_id=#{param1} and user_id=#{param2};
    </select>
</mapper>